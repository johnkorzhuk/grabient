{
  "name": "@repo/data-ops",
  "version": "1.0.0",
  "description": "Manage auth, database, schemas, and queries",
  "exports": {
    "./auth/*": {
      "types": "./dist/auth/*.d.ts",
      "default": "./dist/auth/*.js"
    },
    "./database/*": {
      "types": "./dist/database/*.d.ts",
      "default": "./dist/database/*.js"
    },
    "./valibot-schema/*": {
      "types": "./dist/valibot-schema/*.d.ts",
      "default": "./dist/valibot-schema/*.js"
    },
    "./queries/*": {
      "types": "./dist/queries/*.d.ts",
      "default": "./dist/queries/*.js"
    },
    "./queries/palettes": {
      "types": "./dist/queries/palettes.d.ts",
      "default": "./dist/queries/palettes.js"
    },
    "./valibot-schema/grabient": {
      "types": "./dist/valibot-schema/grabient.d.ts",
      "default": "./dist/valibot-schema/grabient.js"
    },
    "./valibot-schema/auth": {
      "types": "./dist/valibot-schema/auth.d.ts",
      "default": "./dist/valibot-schema/auth.js"
    },
    "./serialization": {
      "types": "./dist/serialization.d.ts",
      "default": "./dist/serialization.js"
    },
    "./drizzle/*": {
      "types": "./dist/drizzle/*.d.ts",
      "default": "./dist/drizzle/*.js"
    },
    "./gradient-gen": {
      "types": "./dist/gradient-gen/index.d.ts",
      "default": "./dist/gradient-gen/index.js"
    },
    "./gradient-gen/*": {
      "types": "./dist/gradient-gen/*.d.ts",
      "default": "./dist/gradient-gen/*.js"
    },
    "./scripts/*": {
      "types": "./dist/scripts/*.d.ts",
      "default": "./dist/scripts/*.js"
    },
    "./color-utils": {
      "types": "./dist/color-utils.d.ts",
      "default": "./dist/color-utils.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json --outDir ./dist && tsc-alias",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "better-auth:generate": "mkdir -p src/drizzle && npx @better-auth/cli@latest generate --config ./config/auth.ts --output ./src/drizzle/auth-schema.ts",
    "drizzle:generate": "drizzle-kit generate --config drizzle.config.ts",
    "drizzle:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "drizzle:pull": "drizzle-kit pull --config drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config drizzle.config.local.ts",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:seed:prod": "tsx src/scripts/seed-production.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "aws4fetch": "^1.0.20",
    "@neondatabase/serverless": "^1.0.1",
    "@planetscale/database": "^1.19.0",
    "@polar-sh/better-auth": "^1.1.0",
    "@polar-sh/sdk": "^0.34.13",
    "better-auth": "^1.3.7",
    "better-sqlite3": "^12.2.0",
    "drizzle-orm": "^0.44.5",
    "dotenv": "^16.4.5",
    "lz-string": "^1.5.0",
    "valibot": "^1.1.0",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251202.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/lz-string": "^1.5.0",
    "@vitest/coverage-v8": "^2.1.8",
    "drizzle-kit": "^0.31.4",
    "mysql2": "^3.14.3",
    "postgres": "^3.4.7",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8"
  }
}
