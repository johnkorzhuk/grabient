{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "lib": ["ESNext"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["@cloudflare/workers-types"]
  },
  "include": ["src"],
  "exclude": [
    "../../reference-repos/**",
    "src/scripts/**"
  ]
}
